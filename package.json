    "format": "prettier --write ."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@neondatabase/api-client": "^1.10.3",
    "@neondatabase/serverless": "^0.10.4",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "prettier": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.17.0"
  }
}
